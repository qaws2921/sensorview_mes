<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>


    <!--  base layout [s]  -->
    <definition name="layout" template="/views/base.jsp">
        <put-attribute name="header" value="/views/components/header.jsp" />
        <put-attribute name="helpDesk" value="/views/components/navbar/top-nav.jsp" />
        <put-attribute name="mid" value="/views/components/navbar/mid-nav.jsp" />
        <put-attribute name="lnb"   value="/views/components/navbar/left-nav.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/views/components/footer.jsp" />
    </definition>
    <!--  base layout [e]  -->

    <!--  body content [s]  -->
    <definition name="*/*/*" extends="layout">
        <put-attribute name="lnb"   value="/views/components/navbar/left-nav.jsp" />
        <put-attribute name="body" value="/views/body/{1}/{2}/{3}.jsp" />
    </definition>
    <definition name="*/*/*/*" extends="layout">
        <put-attribute name="lnb"   value="/views/components/navbar/left-nav.jsp" />
        <put-attribute name="body" value="/views/body/{1}/{2}/{3}/{4}.jsp" />
    </definition>
    <!--  body content [e]  -->

    <definition name="login"  template="/views/body/login/login.jsp"/>
    <definition name="main"  extends="layout"/>

</tiles-definitions>