<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mes.sensorview.Mapper.mesSCM.Standard.ScmStandardMapper">

    <select id="sysPartGroupGet" resultType="mes.sensorview.mesScm.Standard.DTO.SYS_PART_GROUP">
        	EXEC SP_SYS_PART_GROUP_GET #{site_code},#{page}, #{rows},#{keyword}, #{keyword2},''
    </select>
    <select id="sysPartGroupOneGet" resultType="mes.sensorview.mesScm.Standard.DTO.SYS_PART_GROUP">
        	EXEC SP_SYS_PART_GROUP_GET #{site_code},1, 1,#{part_type}, #{part_level},#{part_grp_code}
    </select>
    <select id="sysPartGroupAdd" resultType="mes.sensorview.Common.DataTransferObject.Message">
    	EXEC SP_SYS_PART_GROUP_ADD #{site_code},#{part_type},#{part_level},#{part_grp_code},#{part_grp_name},#{remark},#{user_code},#{keyword}
    </select>
    <select id="sysPartGroupDel" resultType="mes.sensorview.Common.DataTransferObject.Message">
    	EXEC SP_SYS_PART_GROUP_DEL #{site_code},#{keyword}
    </select>

    <select id="sysPartGet" resultType="mes.sensorview.mesScm.Standard.DTO.SYS_PART_CD">
        	EXEC SP_SYS_PART_GET #{site_code},#{page}, #{rows},#{keyword}, #{keyword2}, #{keyword3},#{keyword4},''
    </select>

    <select id="sysPartOneGet" resultType="mes.sensorview.mesScm.Standard.DTO.SYS_PART_CD">
        	EXEC SP_SYS_PART_GET #{site_code},1, 1,'','','','',#{keyword}
    </select>

    <select id="sysPartAdd" resultType="mes.sensorview.Common.DataTransferObject.Message">
    	EXEC SP_SYS_PART_ADD #{site_code},#{part_type},#{part_group1},#{part_group2},#{part_group3},#{part_code},#{part_name},#{cargo_code},#{loc_code},#{supp_code},
    	#{spec},#{unit_code},#{lt},#{qc_level},#{max_qty},#{min_qty},#{ord_qty},#{user_code},#{keyword}
    </select>

    <select id="sysPartDel" resultType="mes.sensorview.Common.DataTransferObject.Message">
    	EXEC SP_SYS_PART_DEL #{site_code},#{keyword}
    </select>


</mapper>
